
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_green"
    android:weightSum="1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:id="@+id/alcohol_block">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            >

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="80dip"
                >

                <ImageButton
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:id="@+id/alcohol"
                    android:background="#00000000"
                    android:src="@drawable/alcohol"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="0.7" />

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:text="Alcohol"
                    android:id="@+id/textView2"
                    style="@style/MyText"
                    android:textColor="#ffffff"
                    android:layout_weight="1"
                    android:paddingTop="30dip" />

                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ratingBar2"
                    android:paddingTop="10dip" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/textView19"
                android:textColor="#ffffff"
                android:paddingStart="130dip" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/smoking_block">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="80dip"
                >

                <ImageButton
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:id="@+id/smoking"
                    android:src="@drawable/smoking"
                    android:background="#00000000"
                    android:layout_weight="0.7" />

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:text="Smoking"
                    android:id="@+id/textView15"
                    android:layout_weight="1"
                    android:textColor="#ffffff"
                    style="@style/MyText"
                    android:paddingTop="30dip" />

                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ratingBar3"
                    android:paddingTop="10dip" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/textView20"
                android:textColor="#ffffff"
                android:paddingStart="130dip" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/overwork_block">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="80dip"
                >

                <ImageButton
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:id="@+id/overwork"
                    android:src="@drawable/overwork1"
                    android:background="#00000000"
                    android:layout_weight="0.7" />

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:text="Overwork"
                    android:id="@+id/textView16"
                    android:layout_weight="1"
                    style="@style/MyText"
                    android:textColor="#ffffff"
                    android:paddingTop="30dip" />

                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ratingBar4"
                    android:paddingTop="10dip" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/textView21"
                android:textColor="#ffffff"
                android:paddingStart="130dip" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/eating_disorder_block">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="80dip"
                >

                <ImageButton
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:id="@+id/eating_disorder"
                    android:src="@drawable/eating_disorder1"
                    android:background="#00000000"
                    android:layout_weight="0.7" />

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:text="Eating disorder"
                    android:id="@+id/textView17"
                    android:layout_weight="1"
                    style="@style/MyText"
                    android:paddingTop="30dip"
                    android:textColor="#ffffff" />

                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ratingBar5"
                    android:paddingTop="10dip" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/textView22"
                android:textColor="#ffffff"
                android:paddingStart="130dip" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/stay_up_late_block">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="80dip"
                >

                <ImageButton
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:id="@+id/stay_up_late"
                    android:src="@drawable/stay_up_late1"
                    android:background="#00000000"
                    android:layout_weight="0.7" />

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:text="Stay up late"
                    android:id="@+id/textView18"
                    android:layout_weight="1"
                    style="@style/MyText"
                    android:paddingTop="30dip"
                    android:textColor="#ffffff" />

                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ratingBar6"
                    android:paddingTop="10dip" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/textView23"
                android:textColor="#ffffff"
                android:paddingStart="130dip" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>