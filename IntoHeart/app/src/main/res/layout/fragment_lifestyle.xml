
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_green"
    android:padding="16dip">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:id="@+id/alcohol_block">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerVertical="true">
                <ImageView
                    android:id="@+id/alcohol"
                    android:background="#00000000"
                    android:src="@drawable/alcohol"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="0.7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alcohol"
                    android:id="@+id/textView2"
                    style="@style/MyText"
                    android:textColor="#ffffff"/>
                </LinearLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true">
                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ratingBarAlcohol"
                    android:layout_alignParentEnd="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:id="@+id/rateNote1"
                    android:textColor="#ffffff"
                    android:layout_marginTop="-10dip"
                    android:layout_marginRight="5dip"
                    android:layout_below="@+id/ratingBarAlcohol"
                    android:layout_alignParentEnd="true"
                    style="@style/MyText"
                    />
                </RelativeLayout>
            </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/smoking_block">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="80dip"
                >

                <ImageButton
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:id="@+id/smoking"
                    android:src="@drawable/smoking"
                    android:background="#00000000"
                    android:layout_weight="0.7" />

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:text="Smoking"
                    android:id="@+id/textView15"
                    android:layout_weight="1"
                    android:textColor="#ffffff"
                    style="@style/MyText"
                    android:paddingTop="30dip" />

                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ratingBarSmoking"
                    android:paddingTop="10dip" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/rateNote2"
                android:textColor="#ffffff"
                android:paddingStart="130dip" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/overwork_block">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="80dip"
                >

                <ImageButton
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:id="@+id/overwork"
                    android:src="@drawable/overwork1"
                    android:background="#00000000"
                    android:layout_weight="0.7" />

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:text="Overwork"
                    android:id="@+id/textView16"
                    android:layout_weight="1"
                    style="@style/MyText"
                    android:textColor="#ffffff"
                    android:paddingTop="30dip" />

                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ratingBarOverwork"
                    android:paddingTop="10dip" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/rateNote3"
                android:textColor="#ffffff"
                android:paddingStart="130dip" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/eating_disorder_block">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="80dip"
                >

                <ImageButton
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:id="@+id/eating_disorder"
                    android:src="@drawable/eating_disorder1"
                    android:background="#00000000"
                    android:layout_weight="0.7" />

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:text="Eating disorder"
                    android:id="@+id/textView17"
                    android:layout_weight="1"
                    style="@style/MyText"
                    android:paddingTop="30dip"
                    android:textColor="#ffffff" />

                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ratingBarEatig"
                    android:paddingTop="10dip" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/rateNote4"
                android:textColor="#ffffff"
                android:paddingStart="130dip" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/stay_up_late_block">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="80dip"
                >

                <ImageButton
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:id="@+id/stay_up_late"
                    android:src="@drawable/stay_up_late1"
                    android:background="#00000000"
                    android:layout_weight="0.7" />

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:text="Stay up late"
                    android:id="@+id/textView18"
                    android:layout_weight="1"
                    style="@style/MyText"
                    android:paddingTop="30dip"
                    android:textColor="#ffffff" />

                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ratingBarStayup"
                    android:paddingTop="10dip" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/rateNote5"
                android:textColor="#ffffff"
                android:paddingStart="130dip" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>